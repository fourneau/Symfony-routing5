{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ actor.name }}</td>
            </tr>
            <tr>
                <th>Linked Programs</th>
                <td>
                    <ul>
                    {% for program in programs %}
                        <li><a href="{{ path("program_show", { id: program.id}) }}">{{ program.title }}</a></li>
                    {% else %}
                        Aucune série trouvée.
                    {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>
    
