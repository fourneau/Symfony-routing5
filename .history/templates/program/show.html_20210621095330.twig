{% extends "base.html.twig" %}
{% block title %}Série #{{ program.id }}{% endblock %}


{% block body %}


   <div class="media">

    <img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">

    <div class="media-body">

      <h1 class="mt-0">{{ program.title }}</h1>

      <p>{{ program.summary }}</p>

      <p>Catégorie : {{ program.category.name }}</p>
      
    </div>
    {% for season in seasons %}
      <div>
         <h2>{{ loop.index }} / Saison n° : {{ season.number }} - {{ season.year }}</h2>
         <a href="{{ path("program_season_show", { programId: program.id, seasonId: season.id }) }}">Voir la fiche</a>
      </div>
   {% else %}
        Aucune saison trouvée.
   {% endfor %}
  </div>


  <a href="{{ path('program_index') }}">

    Retour à la liste des programmes

</a>

<h5>Acteurs :</h5>
  <ul>
      {% for actor in program.actors %}
          <li><a href="{{ path("actor_show", { id: actor.id}) }}">{{ actor.name }}</a></li>
      {% else %}
          <li>Aucun acteur trouvé</li>
      {% endfor %}
  </ul>
  </br>
  <a href="{{ path('program_index') }}">
    Retour à la liste des programmes
</a>
{% endblock %}


{% endblock %}