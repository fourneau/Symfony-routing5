{% extends 'base.html.twig' %}

{% block title %}Hello CategoryController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		{% for category in categories %}

			<h2>{{category.name}}</h2>
			<a href="{{ path("category_show", { categoryName: category.name }) }}">Voir la liste des séries pour cette catégorie</a>
		{% endfor %}
	</div>
{% endblock %}